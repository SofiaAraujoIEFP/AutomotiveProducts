@page "/addproducts"
@using AutomotiveProducts.Entities;
@using Refit;
@inject IWebAPI WebAPI
@rendermode InteractiveServer
@inject HttpClient Http
@inject NavigationManager NavigationManager



<h3>Add Products</h3>

<EditForm FormName="ProductEditForm" Model="_product" OnValidSubmit="EditProduct">
    <div class="row">
        <label>Title</label>
        <InputText @bind-Value="_product.Title" />

        <label>Description</label>
        <InputText @bind-Value="_product.Description" />

        <label>Quantity</label>
        <InputNumber @bind-Value="_product.Quantity" />

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="@(() => EditProduct())"
                   type="submit"
                   EndIcon="@Icons.Material.Filled.Save">
        </MudButton>
    </div>
</EditForm>

